    <operators>
        <!-- combinators -->
        <!--<operator id="ternary" type="combinator" precedence="10">
            <names>
                <name>if</name>
                <name>then</name>
                <symbol>?</symbol>
            </names>
            <arity>2</arity>
        </operator>-->
        <operator id="and" type="combinator" precedence="0">
            <names>
                <name>also</name>
                <symbol>&amp;&amp;</symbol>
            </names>
        </operator>
        <operator id="or" type="combinator" precedence="0">
            <names>
                <name>else</name>
                <symbol>||</symbol>
            </names>
        </operator>
        <operator id="not" type="combinator" precedence="1">
            <names>
                <symbol>!</symbol>
                <regexp>(!)(?=\w|!)</regexp>
            </names>
            <arity>1</arity>
            <right_associative>true</right_associative>
            <inverse>not</inverse>
        </operator>
        
        <!-- comparators -->
        <operator id="eq" type="comparator" precedence="30">
            <names>
                <name>is</name>
                <name>the same as</name>
                <symbol>==</symbol>
            </names>
            <reverse>eq</reverse>
            <inverse>ne</inverse>
        </operator>
        <operator id="lt" type="comparator" precedence="35">
            <names>
                <name>less than</name>
                <name>smaller than</name>
                <symbol>&lt;</symbol>
            </names>
            <reverse>gt</reverse>
            <inverse>ge</inverse>
        </operator>
        <operator id="gt" type="comparator" precedence="35">
            <names>
                <name>greater than</name>
                <name>bigger than</name>
                <symbol>></symbol>
            </names>
            <reverse>lt</reverse>
            <inverse>le</inverse>
        </operator>
        <operator id="le" type="comparator" precedence="35">
            <names>
                <name>less than or equal</name>
                <name>the same or smaller than</name>
                <symbol>&lt;=</symbol>
            </names>
            <reverse>ge</reverse>
            <inverse>gt</inverse>
        </operator>
        <operator id="ge" type="comparator" precedence="35">
            <names>
                <name>greater than or equal</name>
                <name>the same or bigger than</name>
                <symbol>>=</symbol>
            </names>
            <reverse>le</reverse>
            <inverse>lt</inverse>
        </operator>
        <operator id="ne" type="comparator" precedence="30">
            <names>
                <name>not equal</name>
                <name>=/=</name>
                <name>not the same as</name>
                <symbol>!=</symbol>
                <ruby>&lt;></ruby>
            </names>
            <reverse>ne</reverse>
            <inverse>eq</inverse>
        </operator>
        
        <!-- arithmetic -->
        <operator id="add" precedence="55" type="arithmetic">
            <names>
                <name>plus</name>
                <symbol>+</symbol>
            </names>
            <identity>0</identity>
            <inverse>subtract</inverse>
        </operator>
        <operator id="subtract" precedence="55" type="arithmetic">
            <names>
                <name>minus</name>
                <name>less</name>
                <symbol>-</symbol>
            </names>
            <identity>0</identity>
            <inverse>plus</inverse>
        </operator>
        <operator id="negate" precedence="65" type="arithmetic">
            <names>
                <name>negation</name>
                <symbol>-</symbol>
                <regexp>(!)(?=\w|!)</regexp>
            </names>
            <arity>1</arity>
            <right_associative>true</right_associative>
            <identity>0</identity>
            <inverse>negate</inverse>
        </operator>
        <operator id="multiply" precedence="60" type="arithmetic">
            <names>
                <name>times</name>
                <name>by</name>
                <symbol>ร</symbol>
                <ruby>*</ruby>
            </names>
            <identity>1</identity>
            <inverse>divided_by</inverse>
        </operator>
        <operator id="divide" precedence="60" type="arithmetic">
            <names>
                <name>over</name>
                <symbol>รท</symbol>
                <ruby>/</ruby>
            </names>
            <identity>1</identity>
            <inverse>times</inverse>
        </operator>
        <operator id="modulus" precedence="60" type="arithmetic">
            <names>
                <name>mod</name>
                <symbol>%</symbol>
            </names>
        </operator>
        <operator id="exponent" precedence="70" type="arithmetic">
            <names>
                <name>power</name>
                <name>power</name>
                <symbol>^</symbol>
                <ruby>**</ruby>
            </names>
            <identity>1</identity>
            <inverse>log</inverse>
        </operator>
        <!--<operator id="log" precedence="70" type="arithmetic">
            <names>
                <name>logarithm</name>
            </names>
            <inverse>exponent</inverse>
        </operator>-->
    </operators>
</logic>
