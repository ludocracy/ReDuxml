        <operator id="and_" type="combinator" precedence="0">
            <names>
                <default>and</default>
                <name>also</name>
                <symbol>&amp;&amp;</symbol>
            </names>
            <identity>true</identity>
        </operator>
        <operator id="or_" type="combinator" precedence="0">
            <names>
                <default>or</default>
                <name>else</name>
                <symbol>||</symbol>
            </names>
            <identity>false</identity>
        </operator>
        <operator id="not_" type="combinator" precedence="40">
            <names>
                <default>not</default>
                <symbol>!</symbol>
                <regexp>(!)(?=\w|!)</regexp>
            </names>
            <arity>1</arity>
            <right_associative>true</right_associative>
            <inverse>not</inverse>
        </operator>
        
        <!-- comparators -->
        <operator id="eq" type="comparator" precedence="30">
            <names>
                <default>equal</default>
                <name>equals</name>
                <name>is</name>
                <name>the same as</name>
                <symbol>==</symbol>
            </names>
            <reverse>eq</reverse>
            <inverse>ne</inverse>
        </operator>
        <operator id="lt" type="comparator" precedence="35">
            <names>
                <default>less than</default>
                <name>smaller than</name>
                <symbol>&lt;</symbol>
            </names>
            <reverse>gt</reverse>
            <inverse>ge</inverse>
        </operator>
        <operator id="gt" type="comparator" precedence="35">
            <names>
                <default>greater than</default>
                <name>bigger than</name>
                <symbol>></symbol>
            </names>
            <reverse>lt</reverse>
            <inverse>le</inverse>
        </operator>
        <operator id="le" type="comparator" precedence="35">
            <names>
                <default>less than or equal</default>
                <name>the same or smaller than</name>
                <symbol>&lt;=</symbol>
            </names>
            <reverse>ge</reverse>
            <inverse>gt</inverse>
        </operator>
        <operator id="ge" type="comparator" precedence="35">
            <names>
                <default>greater than or equal</default>
                <name>the same or bigger than</name>
                <symbol>>=</symbol>
            </names>
            <reverse>le</reverse>
            <inverse>lt</inverse>
        </operator>
        <operator id="ne" type="comparator" precedence="30">
            <names>
                <default>not equal</default>
                <name>=/=</name>
                <name>not the same as</name>
                <symbol>!=</symbol>
            </names>
            <reverse>ne</reverse>
            <inverse>eq</inverse>
        </operator>
        
        <!-- arithmetic -->
        <operator id="add" precedence="55" type="arithmetic">
            <names>
                <default>addition</default>
                <name>plus</name>
                <symbol>+</symbol>
            </names>
            <identity>0</identity>
            <inverse>subtract</inverse>
        </operator>
        <operator id="subtract" precedence="55" type="arithmetic">
            <names>
                <default>subtraction</default>
                <name>minus</name>
                <symbol>-</symbol>
            </names>
            <identity>0</identity>
            <inverse>add</inverse>
        </operator>
        <operator id="negate" precedence="65" type="arithmetic">
            <names>
                <default>negation</default>
                <name>negative</name>
                <symbol>-</symbol>
                <regexp>(!)(?=\w|!)</regexp>
            </names>
            <arity>1</arity>
            <right_associative>true</right_associative>
            <identity>0</identity>
            <inverse>negate</inverse>
        </operator>
        <operator id="multiply" precedence="60" type="arithmetic">
            <names>
                <default>multiplication</default>
                <name>times</name>
                <name>by</name>
                <name>ร</name>
                <symbol>*</symbol>
            </names>
            <identity>1</identity>
            <inverse>divide</inverse>
        </operator>
        <operator id="divide" precedence="60" type="arithmetic">
            <names>
                <default>division</default>
                <name>over</name>
                <name>divide by</name>
                <name>divided by</name>
                <name>รท</name>
                <symbol>/</symbol>
            </names>
            <identity>1</identity>
            <inverse>multiply</inverse>
        </operator>
        <operator id="modulus" precedence="60" type="arithmetic">
            <names>
                <default>modulo</default>
                <name>mod</name>
                <symbol>%</symbol>
            </names>
        </operator>
        <operator id="exponent" precedence="70" type="arithmetic">
            <names>
                <default>exponentiation</default>
                <name>power</name>
                <symbol>^</symbol>
                <ruby>**</ruby>
            </names>
            <identity>1</identity>
            <inverse>log</inverse>
        </operator>
        <!--<operator id="log" precedence="70" type="arithmetic">
            <names>
                <name>logarithm</name>
            </names>
            <inverse>exponent</inverse>
        </operator>-->
        
